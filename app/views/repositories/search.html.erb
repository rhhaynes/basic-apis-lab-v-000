<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @info %>
    <ul>
    <% @info.each do |i| %>
      <li>
        <%= i["name"] %><br>
        <%= i["location"]["address"] %><br>
        Checkins: <%= i["stats"]["checkinsCount"] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>